<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <Button
        android:id="@+id/button_north"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NORTH"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true" />

    <!-- Butonul pentru Sud -->
    <Button
        android:id="@+id/button_south"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOUTH"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_north"
        android:layout_marginTop="60dp"/>

    <!-- Butonul pentru Est -->
    <Button
        android:id="@+id/button_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EAST"
        android:layout_toRightOf="@id/button_north"
        android:layout_alignTop="@id/button_north"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"/>

    <!-- Butonul pentru Vest -->
    <Button
        android:id="@+id/button_west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEST"
        android:layout_toLeftOf="@id/button_north"
        android:layout_alignTop="@id/button_north"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="60dp"/>

    <!-- TextView pentru afișarea direcțiilor -->
    <TextView
        android:id="@+id/text_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_south"
        android:layout_centerHorizontal="true"
        android:text="Directions will appear here"
        android:paddingTop="20dp" />

    <!-- Buton pentru a naviga către o activitate secundară -->
    <Button
        android:id="@+id/button_navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAVIGATE TO SECONDARY ACTIVITY"
        android:layout_below="@id/text_directions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/button_reset_and_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET AND NAVIGATE"
            android:layout_below="@id/button_navigate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START SERVICE"
            android:layout_below="@id/button_reset_and_navigate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>